{
    "manifest_version": 2,
    "name": "Prntsc Display Extension",
    "description": "This extension opens one or more random images hosted at prnt.sc",
    "version": "1.2.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ], 
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}
